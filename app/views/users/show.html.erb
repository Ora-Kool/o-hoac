<%provide(:title, @user.name.capitalize) %>
<div class="row">
  <div class="large-3 columns"
       style="
       background-color: #ffffff;
           margin-top: 10px;
           -webkit-border-radius: 4px;
           -moz-border-radius: 4px;
           border-radius: 4px;
           margin-bottom: 100px;
       ">
    <h4 style="padding: 10px;"><%= @user.name.capitalize%>
    <hr class="profile">
    </h4>
    <div class="row">
      <div class="large-12 small-12 medium-12 columns end">
        <div class="card">

          <div class="image">

            <!--<img src="http://images.freeimages.com/images/previews/cf6/bird-1394216.jpg">-->
            <%= image_tag('doctor.svg.png', alt: 'image')%>


          </div>

          <div class="content">

            <p>
              infos
            </p>

          </div>

          <div class="action">

            <a href='#'>Read more...</a>

          </div>

        </div>
      </div>
      <!--<div class="large-6 small-8 columns">
        <p>mobile number</p>

        <p>0000000000</p>
        <p>0000000000</p>

      </div>-->
      <hr style="margin: 10px; padding-top: 20px">
    </div>
    <div class="row">
      <div class="large-12 columns" style="margin-top: 40px;">
        <h5>Notifications</h5>
        <ul class="accordion" data-accordion data-allow-all-closed="true" data-accordion>
          <li class="accordion-item" data-accordion-item>
            <a href="#" class="accordion-title">My Appointments <span class="badge" style="margin-left: 20px"> 1</span></a>
            <div class="accordion-content" data-tab-content>
              I would start in the open state, due to using the `is-active` state class.
            </div>
          </li>
          <!--<li class="accordion-item" data-accordion-item>
            <a href="#" class="accordion-title">Accordion 1</a>
            <div class="accordion-content" data-tab-content>
              I would start in the open state, due to using the `is-active` state class.
            </div>
          </li>
          <li class="accordion-item" data-accordion-item>
            <a href="#" class="accordion-title">Accordion 1</a>
            <div class="accordion-content" data-tab-content>
              I would start in the open state, due to using the `is-active` state class.
            </div>
          </li>-->
        </ul>
      </div>
    </div>
  </div>




  <div class="large-8 columns"
       style="
           margin-top: 10px;
           margin-bottom: 10px
       ">

      <% @users.each do |user|%>
        <div class="row" style="margin-bottom: 5px;" id="container">

          <div class="large-6 columns end">

            <div class="card">

              <div class="image">

                <!--<img src="http://images.freeimages.com/images/previews/cf6/bird-1394216.jpg">-->
                <%= image_tag('doctor.svg.png', alt: "image")%>

                <span class="title">
                  Dr. <%= user.name.capitalize%>

                </span>

              </div>

              <div class="content">

                <p>
                  Little proffessional background here
                </p>

              </div>

              <div class="action">

                <a href='#'>Read more...</a>

              </div>

            </div>

          </div>

         <div class="medium-6 columns end">

            <div class="card">

              <div class="content">

                <span class="title">Proffession</span>

                <p>
                  Description of his proffession, the online and offline will be set
                  when doctor is online or offline
                </p>

              </div>

              <div class="action">

                <a href='#'>Online</a>

                <a href='#'>Offline</a>

              </div>

            </div>

          </div>

        </div>
      <%end%>


  </div>
</div>






