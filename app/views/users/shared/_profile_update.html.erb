<%= form_for(@user) do |f| %>
    <%= render 'users/shared/error_messages', object: @user %>

    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :first_name %>
    <%= f.text_field :first_name%>

    <%= f.label :last_name %>
    <%= f.text_field :last_name%>

    <%= f.label :mobile_phone %>
    <%= f.phone_field :mobile_phone %>

    <%= f.label :gender %>
    <%= f.collection_select :gender_id, Gender.all, :id, :name %>

    <%= f.label :current_city %>
    <%= f.text_field :current_city %>

    <%= f.label "Date Of Birth" %>
    <%= f.date_field :dob, placeholder: "dd/mm/yyyy" %>

    <%= f.label :email %>
    <%= f.email_field :email%>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit yield(:button_text), class: "button columns" %>
<% end %>